{
  "modules-left": ["hyprland/workspaces"],
  "modules-center": ["hyprland/window"],
  "modules-right": ["cpu", "memory", "pulseaudio", "clock", "network", "tray"],
  "hyprland/window": {
    "separate-outputs": true
  },
  "clock": {
    "format": "{:%A, %d %B %Y %H:%M}",
    "tooltip-format": "<big>{:%Y %B %d}</big>\n<tt><small>{calendar}</small></tt>",
    "calendar": {
        "mode": "year",
        "mode-mon-col": 3,
        "weeks-pos": "right",
        "on-scroll": 1,
        "on-click-right": "mode",
        "format": {
            "months": "<span color='#ffead3'><b>{}</b></span>",
            "days": "<span color='#ecc6d9'><b>{}</b></span>",
            "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
            "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
            "today": "<span color='#ff6699'><b><u>{}</u></b></span>"
        }
    }
  },
  "network": {
    "format": "{ifname} - {ipaddr}",
    "format-wifi": "ğŸ“¶ {essid} ({signalStrength}%) - {ipaddr}",
    "format-ethernet": "ğŸ”Œ {ifname}",
    "format-disconnected": "âŒ No Network",
    "family": "ipv4",
    "interval": 120,
    "tooltip-format": "IP: {ipaddr}"
  },
  "pulseaudio": {
    "format": "ğŸ”Š {volume}"
  },
  "custom/window": {
    "exec": "hyprctl activewindow | grep 'title' | cut -d' ' -f2-",
    "interval": 1,
    "format": "ğŸ–¥ï¸ {output}"
  },
  "cpu": {
    "format": "ğŸ”¥ {usage}%"
  },
  "memory": {
    "format": "ï‹› {used:0.1f}GiB/{total:0.1f}GiB"
  },
  "custom/separator": {
    "format": "|",
    "interval": "once",
    "tooltip": false
  },
  "custom/hypr-bindings": {
    "exec": "bash ~/.config/waybar/hypr-bindings.sh",
    "interval": 10,
    "tooltip": true,
    "tooltip-format": "Bindings:\n{}"
  }
}
